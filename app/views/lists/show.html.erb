<div class='row'>
  <div class='list-title col-xs-6'>
    <h1> <%= @list.title %> </h1>
  </div>
  <div class='list-title col-xs-4'>
    <%= link_to "Edit List Name", edit_list_path, class: 'btn btn-default'  %>
  </div>
</div>

<div class='items'>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Item Name</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each_with_index do |itm, index| %>
        <tr>
          <th scope="row"><%= index %></th>
          <td><%= itm.name %></td>
        </tr>
      <% end %>
    </tbody>  
  </table>
</div>

<div class='row new-item'>
  <div class='col-xs-9'>
    <%= render 'items/form' %>
  </div>
</div>
