<h2> Update List </h2>
  <%= form_for @list do |f| %>

    <div class='form-group'>
      <%= f.label "Todo List Name" %>
      <%= f.text_field :title, class: 'form-control', placeholder: @list.title %>
    </div>

    <div class='form-group'>
      <%= f.submit "Update" , class: 'btn btn-success' %>
    </div>

<% end %>